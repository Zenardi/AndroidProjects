<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ic_bg">

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/fname"
        android:hint="SEU NOME"
        android:textColor="#f2f2ff"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentRight="true"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:textColor="#f2f2ff"
        android:id="@+id/register_error"
        android:layout_below="@+id/register"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Enviar Orçamento"
        android:id="@+id/bktologin"
        android:textSize="13dp"
        android:layout_above="@+id/register_error"
        android:layout_toRightOf="@+id/register"
        android:layout_toEndOf="@+id/register"
        android:onClick="sendMessage"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#f2f2ff"
        android:id="@+id/lname"
        android:hint="SEU E-MAIL"
        android:textSize="15dp"
        android:layout_below="@+id/fname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#f2f2ff"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/telefone"
        android:hint="SEU TELEFONE"
        android:textSize="15dp"
        android:layout_below="@+id/lname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#f2f2ff"
        android:id="@+id/uname"
        android:hint="DIGITE UMA MENSAGEM"
        android:textSize="15dp"
        android:layout_below="@+id/telefone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="E-MAIL"
        android:textColor="#f2f2ff"
        android:id="@+id/textView3"
        android:textSize="15dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:textColor="#f2f2ff"
        android:text="TELEFONE"
        android:id="@+id/textView4"
        android:textSize="15dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:textColor="#f2f2ff"
        android:text="MENSAGEM"
        android:id="@+id/textView5"
        android:textSize="15dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:textColor="#f2f2ff"
        android:text="DATA DO EVENTO"
        android:id="@+id/textView6"
        android:textSize="15dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:textColor="#f2f2ff"
        android:text="LOCAL DO EVENTO"
        android:id="@+id/textView7"
        android:textSize="15dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem Vindo a Fernandes Bartender. Preencha o formulario abaixo para solicitar um orçamento!"
        android:id="@+id/textView" android:layout_gravity="center"
        android:textColor="#f2f2ff"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="NOME"
        android:id="@+id/textView2"
        android:textColor="#f2f2ff"
        android:textSize="15dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Site Oficial"
        android:id="@+id/register"
        android:textSize="13dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:onClick="redirectOfficialWebSite"/>

    <ImageView
        android:id="@+id/phone_icon"
        android:src="@drawable/ic_logo_black"
        android:layout_column="0"
        android:textColor="#f2f2ff"
        android:layout_row="8"
        android:layout_width="198dp"
        android:layout_height="196dp"
        android:layout_gravity="center"
        android:layout_marginRight="72dp"
        android:layout_marginEnd="72dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/bktologin"
        android:layout_alignRight="@+id/bktologin"
        android:layout_alignEnd="@+id/bktologin" />


    <EditText
        android:id="@+id/dataEvento"
        android:hint="dd/mm/aaaa"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#f2f2ff"
        android:layout_below="@+id/uname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#f2f2ff"
        android:id="@+id/localEvento"
        android:hint="LOCAL DO EVENTO"
        android:textSize="15dp"
        android:layout_above="@+id/register"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
    </ScrollView>